{
  "name": "api.badwaterbay.com",
  "version": "0.0.0",
  "description": "Backend API for BadwaterBay.com",
  "main": "index.js",
  "repository": "https://github.com/BadwaterBay/api.badwaterbay.com.git",
  "author": "BadwaterBay",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "ci": "yarn --frozen-lockfile",
    "format": "prettier './**/*.{js,jsx,ts,tsx,html,json,md,css,scss}' --write",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' --cache --fix",
    "clean": "rm -rf dist",
    "transpile": "babel ./src --out-dir dist",
    "build": "run-s clean transpile",
    "test": "echo 'No test specified yet' && exit 0",
    "serve": "node ./dist/bin/www",
    "development": "nodemon --config ./nodemon.json",
    "start": "run-s ci development",
    "run:dev": "pm2 start ./config/pm2/pm2-dev.config.js",
    "run:prod": "pm2 start ./config/pm2/pm2-prod.config.js",
    "production": "NODE_ENV=production run-s ci build run:prod",
    "refresh": "rm -rf ./node_modules/ && yarn ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,html,json,md,css,scss}": [
      "prettier --write"
    ],
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.0",
    "serve-favicon": "^2.5.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  }
}
